{
	"name": "GitHub compare helper",
	"version": "1.2.0",
	"description": "Adds UI to GitHub commits pages to easier create GitHub compare urls",
	"author": "Henrik Gunnarsson",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action" :
	{
		"default_icon" : "icon-19.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://github.com/*/commits/*"
			],
			"css": ["styles.css"],
			"js": ["common.js", "script-project.js"]
		},
		{
			"matches": [
				"https://github.com/*/*/pull/*/commits"
			],
			"css": ["styles.css"],
			"js": ["common.js", "script-pr.js"]
		}
	],
	"permissions" : [
		"declarativeContent",
		"tabs",
		"https://github.com/*"
	],
	"icons" : {
		"19" : "icon-19.png",
		"48" : "icon-48.png",
		"128" : "icon-128.png"
	},
	"manifest_version": 2
}
